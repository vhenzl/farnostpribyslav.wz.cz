{
  "extends": [
    "@tsconfig/node24/tsconfig",
    "@tsconfig/node-ts/tsconfig",
    "@tsconfig/next/tsconfig",
    "@tsconfig/strictest/tsconfig"
  ],
  "compilerOptions": {
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "eslint.config.mjs",
    "next.config.mjs",
    "next-env.d.ts",
    "postcss.config.mjs",
    "public",
    "scripts",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "out"
  ]
}
